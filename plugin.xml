<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="info.kuee.boxer3.app.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="info.kuee.boxer3.intro.Perspective"
            fixed="true"
            id="info.kuee.boxer3.perspective"
            name="Default">
      </perspective>
      <perspective
            class="info.kuee.boxer3.intro.ExplorerPerspective"
            id="info.kuee.boxer3.perspectiveExplorer"
            name="Explorer">
      </perspective>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="info.kuee.boxer3.application"
            name="Boxer">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif">
         </property>
         <property
               name="appName"
               value="Boxer">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.intro">
      <intro
            class="org.eclipse.ui.intro.config.CustomizableIntroPart"
            id="info.kuee.boxer3.intro">
      </intro>
      <introProductBinding
            introId="info.kuee.boxer3.intro"
            productId="info.kuee.boxer3.product">
      </introProductBinding>
   </extension>
   <extension
         point="org.eclipse.ui.intro.config">
      <config
            introId="info.kuee.boxer3.intro"
            content="introContent.xml"
            id="info.kuee.boxer3.configId">
         <presentation
               home-page-id="root">
            <implementation
                  kind="html"
                  os="win32,linux,macosx">
            </implementation>
         </presentation>
      </config>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="menu:org.eclipse.ui.main.menu?before=additions">
         <menu
               label="File">
            <menu
                  label="New">
               <command
                     commandId="info.kuee.boxer3.commandNewFolder"
                     label="New Folder"
                     style="push">
               </command>
            </menu>
            <separator
                  name="Boxer3.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.eclipse.ui.file.exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
         <menu
               label="Settings">
            <command
                  commandId="info.kuee.boxer3.commandAuth"
                  label="Authenication"
                  style="push">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:info.kuee.boxer3.viewExplorer">
         <command
               commandId="info.kuee.boxer3.commandUpload"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/import_wiz.gif"
               label="Upload"
               style="push"
               tooltip="Upload">
         </command>
         <command
               commandId="info.kuee.boxer3.commandDownload"
               icon="platform:/plugin/org.eclipse.ui/icons/full/etool16/save_edit.gif"
               label="Download"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="info.kuee.boxer3.commandNewFolder"
            name="New Folder">
      </command>
      <command
            id="info.kuee.boxer3.commandAuth"
            name="Authentication">
      </command>
      <command
            defaultHandler="info.kuee.boxer3.handlers.UploadHandler"
            id="info.kuee.boxer3.commandUpload"
            name="Upload">
      </command>
      <command
            defaultHandler="info.kuee.boxer3.handlers.DownloadHandler"
            id="info.kuee.boxer3.commandDownload"
            name="Download">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="info.kuee.boxer3.handlers.NewFolderHandler"
            commandId="info.kuee.boxer3.commandNewFolder">
      </handler>
      <handler
            class="info.kuee.boxer3.handlers.AuthHandler"
            commandId="info.kuee.boxer3.commandAuth">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="true"
            class="info.kuee.boxer3.ui.views.FileView"
            id="info.kuee.boxer3.viewExplorer"
            name="Explorer"
            restorable="true">
      </view>
      <view
            class="info.kuee.boxer3.ui.views.AccountView"
            id="info.kuee.boxer3.viewAccount"
            name="Account"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="info.kuee.boxer3.perspective">
            <view
                  id="info.kuee.boxer3.viewAccount"
                  minimized="false"
                  moveable="false"
                  ratio="0.75"
                  relationship="top"
                  relative="org.eclipse.ui.editorss"
                  visible="true">
            </view>
            <view
                  id="org.eclipse.ui.console.ConsoleView"
                  minimized="false"
                  moveable="false"
                  relationship="top"
                  relative="org.eclipse.ui.editorss"
                  visible="true">
            </view>
      </perspectiveExtension>
      <perspectiveExtension
            targetID="info.kuee.boxer3.perspectiveExplorer">
            <view
                  id="info.kuee.boxer3.viewExplorer"
                  minimized="false"
                  moveable="false"
                  relationship="top"
                  relative="org.eclipse.ui.editorss"
                  visible="true">
            </view>
      </perspectiveExtension>
   </extension>

</plugin>
